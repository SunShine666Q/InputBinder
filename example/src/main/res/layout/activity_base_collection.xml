<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/page_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_activity"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/pageinfo_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_gopage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/text_large" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_activity"
        android:layout_above="@id/page_rl"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/selectll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/org_select_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/short_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/org_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:maxLines="1"
                    android:text="中国"
                    android:textSize="@dimen/text_medium"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/short_margin"
                    android:src="@drawable/jiantou"/>
            </LinearLayout>

            <TextView
                android:layout_width="0.7dp"
                android:layout_height="wrap_content"
                android:background="@color/divider"/>

            <LinearLayout
                android:id="@+id/type_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/short_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:maxLines="1"
                    android:onClick="onClick"
                    android:text="事件类型"
                    android:textSize="@dimen/text_medium"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/short_margin"
                    android:src="@drawable/jiantou"/>
            </LinearLayout>
        </LinearLayout>

        <com.tianque.cmm.lib.framework.widget.recyclerview.LRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:cacheColorHint="#ffffffff"
            android:divider="@color/background_activity"
            android:dividerHeight="@dimen/layout_interval_width_large"/>
    </LinearLayout>
</RelativeLayout>

